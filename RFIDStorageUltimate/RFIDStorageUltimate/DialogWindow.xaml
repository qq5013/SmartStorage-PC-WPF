<Window x:Class="RFIDStorageUltimate.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Name="MetroDialogWindow" Title="对话框" Height="150" Width="600"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Border BorderThickness="1" BorderBrush="{DynamicResource AccentColorBrush}">
        <StackPanel Orientation="Vertical">
            <StackPanel Height="38" Background="#CCDEDEDE">
                <TextBlock Height="28" TextWrapping="Wrap" Text="RFID智能仓储" FontSize="15" Margin="10,10,0,0"/>
            </StackPanel>
            <StackPanel Height="110">
                <StackPanel Height="40">
                    <TextBlock Height="28" TextWrapping="Wrap" Text="正在操作，请等待......" FontSize="15" Margin="10,10,0,0"/>
                </StackPanel>
                <StackPanel Height="70">
                    <ProgressBar Height="26" Width="578" Margin="0,22,0,22" IsIndeterminate="True"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
